<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HaftalikPlanFragment">

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="98dp"
        android:layout_height="51dp"
        android:layout_marginStart="153dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="167dp"
        android:orientation="vertical">


        <EditText
            android:id="@+id/datePickerEditText"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="34dp"
            android:background="#C59292"
            android:focusable="false"
            android:hint="Select Date"
            android:inputType="none"
            android:text="2024-02-21"
            android:textAlignment="viewStart" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="205dp"
        android:layout_height="match_parent"
        android:layout_gravity="start|top"
        android:layout_marginTop="80dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pazartesi" />

            <EditText
                android:id="@+id/editTextTextMultiLine3"
                android:layout_width="200dp"
                android:layout_height="152dp"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salı" />

            <EditText
                android:id="@+id/editTextTextMultiLine4"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Çarşamba" />

            <EditText
                android:id="@+id/editTextTextMultiLine5"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perşembe" />

            <EditText
                android:id="@+id/editTextTextMultiLine6"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="80dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="300dp"
            android:layout_gravity="top"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="40dp">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cuma" />

            <EditText
                android:id="@+id/editTextTextMultiLine7"
                android:layout_width="180dp"
                android:layout_height="300dp"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="300dp"
            android:layout_gravity="bottom" >

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cumartesi" />

            <EditText
                android:id="@+id/editTextTextMultiLine8"
                android:layout_width="180dp"
                android:layout_height="300dp"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</FrameLayout>