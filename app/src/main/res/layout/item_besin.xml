<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="8dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/besinAdiTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/kaloriTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/kaloriTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/besinAdiTextView" />

    <TextView
        android:id="@+id/olcuTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/kaloriTextView"
        app:layout_constraintStart_toStartOf="@id/besinAdiTextView"
        app:layout_constraintTop_toBottomOf="@id/besinAdiTextView" />

    <Button
        android:id="@+id/btn_ekle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:icon="@drawable/_16371_plus_icon"
        app:iconSize="20dp"
        app:layout_constraintEnd_toEndOf="@id/kaloriTextView"
        app:layout_constraintTop_toBottomOf="@id/kaloriTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>
